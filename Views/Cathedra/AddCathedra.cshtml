@model University.Models.CathedraModel

@{
    ViewBag.Title = "Добавить кафедру";
}


    <form method="post">
        <div>
            <label asp-for="Id">Уникальный идентификатор: </label><br />
            <input asp-for="Id" />
            <span asp-validation-for="Id"></span>
        </div>
        <div>
            <label asp-for="CathedraName">Наименование кафедры: </label><br />
            <input asp-for="CathedraName" />
            <span asp-validation-for="CathedraName"></span>
        </div>
        <div>
            <label asp-for="FoundationYear">Год основания: </label><br />
            <input asp-for="FoundationYear" />
            <span asp-validation-for="FoundationYear"></span>
        </div>
        <div>
            <label>Факультет:</label>
        </div>
        <div>
            <select name="FacultyName">
                @foreach (var v in ViewBag.Faculty)
                {
                    <option>@v.Id. @v.FacultyName</option>
                }
            </select>
        </div>
        <div><input type="submit" value="Отправить" /></div>
    </form>

